<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/local_space_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_count"
        app:layout_constraintTop_toBottomOf="@+id/local_space_recycler"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/product_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toStartOf="@+id/product_name"
        app:layout_constraintStart_toEndOf="@+id/product_price"
        app:layout_constraintTop_toBottomOf="@+id/local_space_recycler"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toStartOf="@+id/product_count"
        app:layout_constraintStart_toEndOf="@+id/product_total_price"
        app:layout_constraintTop_toBottomOf="@+id/local_space_recycler"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/product_total_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toStartOf="@+id/product_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/local_space_recycler"
        app:layout_constraintWidth_percent="0.2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
